  display: flex;
  width: 100%;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  padding: 10px
}

.form-control {
  width: 92%;
  border: 1px solid gainsboro;
  border-radius:5px;
  font-size: small;
  padding-left: 10px;
  padding-right: 10px
}

.btn-primary {
  background-color: #4f94cd;
