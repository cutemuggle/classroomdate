.table,.tr{
    border:1px solid #dadada;
    border-right: 0;
    border-bottom: 0;
    width: 100%;
}
.tr {
    width: 100%;
    display: flex;
    justify-content: space-between;
}
.th,.td {
    padding: 5px;
    border-bottom: 1px solid #dadada;
    border-right: 1px solid #dadada;
    text-align: center;
    width:50%
}
.th {
    font-weight: 250;
    background-color: #dadada;
    text-align: center
}
